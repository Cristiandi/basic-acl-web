{
  "version": 2,
  "builds": [
    {
      "src": "__sapper__/build/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      // Specify which paths will route to a destination using a regex
      "src": "/(.*)",
      // Specify the paths' destination
      "dest": "__sapper__/build/index.js"
    }
  ]
}
